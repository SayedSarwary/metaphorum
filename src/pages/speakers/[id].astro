---
import Layout from '../../layouts/Layout.astro';
import speakers from '../../data/speakers.json';
import talks from '../../data/talks.json';

export async function getStaticPaths() {
  return speakers.map(speaker => ({
    params: { id: speaker.id },
    props: { speaker },
  }));
}

const { speaker } = Astro.props;

// Find talks by this speaker
const speakerTalks = talks.filter(t => t.speaker_id === speaker.id);
---

<Layout title={speaker.full_name}>
  <div class="container profile-container">
    <div class="back-link">
        <a href="/speakers">&larr; Back to all speakers</a>
    </div>

    <div class="profile-header">
        <div class="profile-image">
            <img src={speaker.photo_url} alt={speaker.full_name} />
        </div>
        <div class="profile-info">
            <h1>{speaker.full_name}</h1>
            <p class="affiliation">{speaker.affiliation}</p>
        </div>
    </div>

    <div class="profile-bio">
        <h2>Biography</h2>
        <p>{speaker.bio}</p>
    </div>

    {speakerTalks.length > 0 && (
        <div class="profile-talks">
            <h2>Sessions</h2>
            <div class="talks-list">
                {speakerTalks.map(talk => (
                    <div class="talk-item">
                        <h3><a href={`/schedule#${talk.id}`}>{talk.title}</a></h3>
                        <p>{talk.abstract}</p>
                    </div>
                ))}
            </div>
        </div>
    )}
  </div>
</Layout>

<style>
    .profile-container {
        padding-top: 2rem;
        padding-bottom: 4rem;
    }

    .back-link {
        margin-bottom: 2rem;
    }

    .profile-header {
        display: flex;
        gap: 2rem;
        align-items: center;
        margin-bottom: 3rem;
    }

    .profile-image img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--color-background-alt);
    }

    .affiliation {
        font-size: 1.25rem;
        color: var(--color-text-light);
    }

    .profile-bio, .profile-talks {
        max-width: 800px;
        margin-bottom: 3rem;
    }

    .talk-item {
        background: var(--color-background-alt);
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .talk-item h3 {
        font-size: 1.2rem;
        margin-top: 0;
    }

    @media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
    }
</style>
